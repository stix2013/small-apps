{
  "extends": [
    "../../tsconfig.base.json",
    "@tsconfig/node18/tsconfig.json"
  ],
  "display": "watcher",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": [
        "./src/*"
      ]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "types": [
      "@types/node",
      "@types/express",
      "@types/node-schedule",
      "@types/uuid",
      "@yellow-mobile/types"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*/dist"
  ]
}
