{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "isolatedModules": true,
    "moduleResolution": "bundler",
    "module": "es2022",
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "types": [
      "@types/node",
    ]
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}
