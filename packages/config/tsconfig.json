{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": [
    "@tsconfig/node18/tsconfig.json",
    "../../tsconfig.base.json"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "types": ["vitest/globals", "@types/node"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.test.ts",
    "test/**/*.test.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "test/**/*.spec.ts"
  ]
}
